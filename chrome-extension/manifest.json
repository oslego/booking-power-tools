{
  "manifest_version": 2,

  "name": "Booking.com Search Power Tools",
  "description": "Augments Booking.com with extra tools to search, filter and display hotel results.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://localhost/*", "*://www.booking.com/searchresults*"],
      "js": ["webcomponents-sd-ce.js", "contentscript.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
